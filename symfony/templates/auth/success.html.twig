{% extends 'base.html.twig' %}

{% block title %}Shopify – OAuth success{% endblock %}

{% block body %}
    <div style="max-width:640px;margin:48px auto;font-family:system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;">
        <div style="padding:20px 24px;border:1px solid #e5e7eb;border-radius:14px;">
            <h1 style="margin:0 0 8px;">✅ App installed & token saved</h1>
            <p style="margin:0 0 16px;color:#374151;">
                Sklep: <strong>{{ shop }}</strong>
            </p>

            {% if scopes is defined and scopes %}
                <p style="margin:0 0 12px;color:#374151;">
                    Nadane scope’y:
                </p>
                <pre style="background:#f9fafb;border:1px solid #e5e7eb;border-radius:10px;padding:12px;white-space:pre-wrap;">{{ scopes }}</pre>
            {% endif %}

            <div style="display:flex;gap:12px;margin-top:20px;">
                <a href="https://{{ shop }}/admin/apps" style="text-decoration:none;padding:10px 14px;border-radius:10px;border:1px solid #111827;color:#111827;">
                    Otwórz w Shopify Admin
                </a>
                <a href="{{ path('shopify_app_launch') }}?shop={{ shop }}" style="text-decoration:none;padding:10px 14px;border-radius:10px;background:#111827;color:white;">
                    Przejdź do aplikacji
                </a>
            </div>

            <p style="margin-top:18px;color:#6b7280;font-size:14px;">
                (Nie pokazujemy access tokenu – został zapisany bezpiecznie w bazie.)
            </p>
        </div>
    </div>
{% endblock %}
